<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/unit"
    android:paddingLeft="@dimen/space_lg"
    android:paddingRight="@dimen/space_lg"
    android:foreground="@drawable/common_selector_dark"
    android:background="@color/drawerBackground"
    android:clickable="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:gravity="center_vertical">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_face_black_24dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_lg"
        android:textColor="@color/colorTextPrimaryLight"
        tools:text="@string/menu_index"/>
  </LinearLayout>
</FrameLayout>